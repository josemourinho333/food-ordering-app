<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head.ejs') %>
  <body>
    <%- include('partials/_header') %>
    <div class="content">
      <div id="menu-bar">
      <h1>MENU</h1>
      <div id="menu-cart">
        <form method="GET" action="/menu/order">
          <button type="add" class="btn-cart">Check Out </button>
        </form>
      </div>
      </div>

      <% let item = 1;%>

      <!-- <div class="menu"> -->
      <div class="row menu">
        <% for (items of menuItems) {%>
        <!-- menu items -->
        <div class="col-md-8 themed-grid-col menu-item">
          <div class="row mb-3">
            <div class="col-md-2 themed-grid-item">
              <div class="pb-3">
                <div class="item-info">
                  <span class="item-pic"
                    ><img id="cover-image" src=" <%= items.photo_url %> "
                  /></span>
                  <!-- <span>Description</span> -->
                </div>
              </div>
            </div>
            <div class="col-md-6 themed-grid-item">
              <div class="pb-3">
                <div class="item-info">
                  <span><%= items.name %></span>
                  <span><%= items.description %></span>
                </div>
              </div>
            </div>
            <div class="col-md-3 themed-grid-item">
              <div id="add-order">
                <span>Price: $<%= items.price/100 %></span>
                <form method="POST" action="/menu/add">
                  <span
                    >Quantity:
                    <input
                      id="quantity"
                      placeholder="1"
                      type="number"
                      name="quantity"
                      value="1"
                  /></span>
                  <input type="hidden" name="itemID" value="<%= items.id %>" />
                  <div id="add-to-cart">
                  <button id = "<%=item%>"class="btn-add">Add to Cart</button><span id="item<%=item%>" style="visibility: hidden;"><i class="fa-solid fa-check added-icon"></i></span>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% item++ %>
        <% } %>
      </div>

      <!-- FOOTER -->
      <%- include('partials/_footer') %>
    </div>
  </body>
</html>
