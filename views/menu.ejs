<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head.ejs') %>
<body>
  <%- include('partials/_header') %>
  <div class="content">
  <h1>MENU</h1>
<!-- <div class="menu"> -->
  <div class="row menu">


    <% for (items of menuItems) {%>
    <!-- menu items -->
    <div class="col-md-9 themed-grid-col menu-item">
      <div class="row mb-3">
        <div class="col-md-2 themed-grid-item">
          <div class="pb-3">
            <div class="item-info">
              <span class="item-pic"><img id="cover-image" src=" <%= items.image_url %> "></span>
              <!-- <span>Description</span> -->
            </div>
          </div>
        </div>
        <div class="col-md-6 themed-grid-item">
          <div class="pb-3">
            <div class="item-info">
              <span><%= items.name %></span>
              <span><%= items.description %></span>
            </div>
          </div>
        </div>
        <div class="col-md-3 themed-grid-item">
          <div id="add-order">
          <span>Price: $<%= items.price_per_item/100 %></span>
          <form method="POST" action="/orders/new">
            <span>Quantity: <input id="quantity" placeholder="1" type="number" name="quantity" value="1"></span>
            <input type="hidden" name="itemID" value="<%= items.id %>">
            <button class="btn-add">Add to Cart</button>
          </form>
          </div>
        </div>
      </div>
    </div>
    <% } %>

  </div>

<!-- FOOTER -->
<h1>FOOTER</h1>
<%- include('partials/_footer') %>
</div>
</body>


</html>
